{
  "login-dialog": "<sl-dialog label=\"Login\" class=\"login-dialog\" name=\"loginDialog\">\n  <div>\n    <sl-input name=\"username\" label=\"Username\" required></sl-input>\n    <br>\n    <sl-input type=\"password\" name=\"password\" label=\"Password\" required></sl-input>\n    <div name=\"message\" class=\"error-message\" style=\"color: red; margin-top: 10px;\"></div>\n  </div>\n  <sl-button type=\"submit\" name=\"submit\" slot=\"footer\" variant=\"primary\">Login</sl-button>\n</sl-dialog>",
  "logout-button": "<sl-tooltip content=\"Log out\">\n  <sl-button name=\"logoutButton\" size=\"small\">\n    <sl-icon name=\"power\"></sl-icon>\n  </sl-button>\n</sl-tooltip>",
  "extraction-buttons": "<sl-button-group name=\"extractionActions\" label=\"Extraction\" >\n  <sl-tooltip content=\"Upload a new PDF and extract references\">\n    <sl-button name=\"extractNew\" size=\"small\">\n      <sl-icon name=\"filetype-pdf\"></sl-icon>\n    </sl-button>\n  </sl-tooltip>\n  <sl-tooltip content=\"Extract from the current PDF into a new TEI version\">\n    <sl-button name=\"extractCurrent\" size=\"small\">\n      <sl-icon name=\"clipboard2-plus\"></sl-icon>\n    </sl-button>\n  </sl-tooltip>\n</sl-button-group>",
  "extraction-dialog": "<sl-dialog name=\"extractionOptions\" label=\"Extraction options\">\n  <div class=\"dialog-column\">\n    <sl-input name=\"doi\" label=\"DOI\" size=\"small\" help-text=\"Please enter the DOI of the document to add document metadata\"></sl-input>\n    <div>\n      <sl-select name=\"collectionName\" label=\"Collection\" size=\"small\" help-text=\"Choose the collection to which the extraction will be added\"></sl-select>\n      <!--<sl-button name=\"newCollectionBtn\" label=\"New collection\" size=\"small\">New collection</sl-button>-->\n    </div>\n    <sl-select name=\"modelIndex\" label=\"Model\" size=\"small\" help-text=\"Choose the model configuration used for the extraction\" value=\"llamore\">\n      <sl-option value=\"llamore\">Llamore</sl-option>\n    </sl-select>\n    <div name=\"dynamicOptions\" class=\"dialog-column\">\n      <!-- Dynamic extractor-specific options will be inserted here -->\n    </div>\n  </div>\n  <sl-button slot=\"footer\" name=\"cancel\" variant=\"neutral\">Cancel</sl-button>\n  <sl-button slot=\"footer\" name=\"submit\" variant=\"primary\">Extract</sl-button>  \n</sl-dialog>",
  "file-selection-drawer": "<!-- File selection drawer -->\n<sl-drawer name=\"fileDrawer\" label=\"Select Document\" placement=\"start\" style=\"--size: 400px;\">\n  <div style=\"display: flex; flex-direction: column; height: 100%;\">\n    \n    <!-- Filter area at top -->\n    <div style=\"padding: 1rem; border-bottom: 1px solid var(--sl-color-neutral-200); flex-shrink: 0;\">\n      \n      <!-- Variant selection -->\n      <div style=\"margin-bottom: 1rem;\">\n        <label style=\"display: block; margin-bottom: 0.5rem; font-weight: bold;\">Variant:</label>\n        <sl-select name=\"variantSelect\" placeholder=\"Select variant...\" size=\"small\" hoist>\n          <!-- Will be populated dynamically -->\n        </sl-select>\n      </div>\n      \n      <!-- Label filter input -->\n      <div>\n        <label style=\"display: block; margin-bottom: 0.5rem; font-weight: bold;\">Filter by label:</label>\n        <sl-input name=\"labelFilter\" placeholder=\"Search documents...\" size=\"small\" clearable>\n          <sl-icon name=\"search\" slot=\"prefix\"></sl-icon>\n        </sl-input>\n      </div>\n      \n    </div>\n    \n    <!-- Tree area - fills remaining space -->\n    <div style=\"flex: 1; padding: 1rem; overflow-y: auto; min-height: 0; display: block; width: 100%;\">\n      <sl-tree name=\"fileTree\" selection=\"leaf\" style=\"width: 100%; min-height: 200px; display: block;\">\n        <!-- Will be populated dynamically -->\n      </sl-tree>\n    </div>\n    \n  </div>\n  \n  <!-- Footer with close button -->\n  <div slot=\"footer\" style=\"display: flex; justify-content: flex-end; padding: 1rem; border-top: 1px solid var(--sl-color-neutral-200);\">\n    <sl-button name=\"closeDrawer\" variant=\"default\" size=\"small\">\n      Close\n    </sl-button>\n  </div>\n</sl-drawer>",
  "file-drawer-button": "<!-- Hamburger button for toolbar -->\n <sl-tooltip content=\"Select documents for viewing and editing\">\n  <sl-button name=\"fileDrawerTrigger\" size=\"small\">\n    <sl-icon name=\"list\"></sl-icon>\n  </sl-button>\n </sl-tooltip>",
  "file-selection": "<sl-select name=\"variant\" size=\"small\" label=\"Model Variant\" hoist></sl-select>  \n<sl-select name=\"pdf\" size=\"small\" label=\"PDF\" hoist></sl-select>\n<sl-select name=\"xml\" size=\"small\" label=\"XML file version\" hoist></sl-select>\n<sl-select name=\"diff\" size=\"small\" label=\"Compare with version\" hoist></sl-select>",
  "info-dialog": "<sl-dialog name=\"infoDialog\" label=\"User Manual\" class=\"dialog-big\">\n  <div name=\"content\" class=\"markdown-body\"></div>\n  <div slot=\"footer\" style=\"display: flex; width: 100%; justify-content: space-between; align-items: center;\">\n    <sl-button name=\"editGitHubBtn\" variant=\"default\">\n      <sl-icon name=\"github\" slot=\"prefix\"></sl-icon>Edit on GitHub</sl-button>\n    <div style=\"display: flex; gap: 8px;\">\n      <sl-button name=\"backBtn\" variant=\"default\" disabled>\n        <sl-icon name=\"arrow-left\" slot=\"prefix\"></sl-icon>Back</sl-button>\n      <sl-button name=\"homeBtn\" variant=\"default\">\n        <sl-icon name=\"house\" slot=\"prefix\"></sl-icon>Home</sl-button>\n      <sl-button name=\"forwardBtn\" variant=\"default\" disabled>\n        <sl-icon name=\"arrow-right\" slot=\"prefix\"></sl-icon>Forward</sl-button>\n      <sl-button name=\"closeBtn\" variant=\"primary\">Close</sl-button>\n    </div>\n  </div>\n</sl-dialog>",
  "about-button": "<sl-button name=\"aboutBtn\" slot=\"footer\" variant=\"default\">\n  <sl-icon name=\"info-circle\" slot=\"prefix\"></sl-icon>About\n</sl-button>",
  "info-toolbar-button": "<sl-tooltip content=\"User Manual\">\n  <sl-button name=\"editInstructions\" size=\"small\">\n    <sl-icon name=\"info-circle\"></sl-icon>\n  </sl-button>\n</sl-tooltip>",
  "move-files-dialog": "<sl-dialog name=\"moveFilesDialog\" label=\"Move Files to Collection\">\n  <p>\n    Select a collection to move the current PDF and XML files to.\n  </p>\n  <div style=\"display: flex; align-items: flex-end; gap: 0.5rem;\">\n    <sl-select name=\"collectionName\" label=\"Collection\" required style=\"flex-grow: 1;\" hoist></sl-select>\n    <sl-button name=\"newCollectionBtn\" variant=\"default\" outline>\n      <sl-icon name=\"plus-lg\" slot=\"prefix\"></sl-icon> New\n    </sl-button>\n  </div>\n  <sl-button slot=\"footer\" name=\"cancel\">Cancel</sl-button>\n  <sl-button slot=\"footer\" name=\"submit\" variant=\"primary\">Move</sl-button>\n</sl-dialog>",
  "prompt-editor": "<sl-dialog name=\"promptEditor\" label=\"Edit prompt\" class=\"dialog-big\">\n  <p>Here you can edit the LLM prompt specific to the reference extraction.</p>\n  <div class=\"dialog-column\">\n    <div class=\"dialog-row\">\n      <sl-input name=\"label\" help-text=\"A short description of the prompt additions\"></sl-input>\n      <sl-dropdown>\n        <sl-button slot=\"trigger\" caret></sl-button>\n        <sl-menu name=\"labelMenu\"></sl-menu>\n      </sl-dropdown>\n    </div>\n    <sl-select name=\"extractorSelect\" label=\"Extractors\" multiple clearable placeholder=\"Select extractors...\" help-text=\"Choose which extractors can use this prompt\">\n    </sl-select>\n    <sl-textarea name=\"text\" rows=\"20\"></sl-textarea>\n  </div>\n  <sl-button slot=\"footer\" name=\"cancel\" variant=\"neutral\">Cancel</sl-button>\n  <sl-button slot=\"footer\" name=\"delete\" disabled variant=\"danger\">Delete prompt</sl-button>\n  <sl-button slot=\"footer\" name=\"duplicate\" variant=\"secondary\">Duplicate prompt</sl-button>\n  <sl-button slot=\"footer\" name=\"submit\" variant=\"primary\">Save &amp; Close</sl-button>\n</sl-dialog>",
  "prompt-editor-button": "<sl-tooltip content=\"Edit the prompt instructions\">\n  <sl-button name=\"editInstructions\" size=\"small\">\n    <sl-icon name=\"pencil-square\"></sl-icon>\n  </sl-button>\n</sl-tooltip>",
  "document-action-buttons": "<span class=\"hbox-with-gap toolbar-content\">\n  <!-- Document button group -->\n  <sl-button-group label=\"Document\" name=\"documentActions\">\n\n    <!-- create new version -->\n    <sl-tooltip content=\"Duplicate current document to make changes to a new version\">\n      <sl-button name=\"createNewVersion\" size=\"small\" disabled>\n        <sl-icon name=\"copy\"></sl-icon>\n      </sl-button>\n    </sl-tooltip>  \n\n    <!-- upload, not implemented yet -->\n    <sl-tooltip content=\"Upload document\">\n      <sl-button name=\"upload\" size=\"small\">\n        <sl-icon name=\"cloud-upload\"></sl-icon>\n      </sl-button>\n    </sl-tooltip>    \n\n    <!-- download -->\n    <sl-tooltip content=\"Download XML document\">\n      <sl-button name=\"download\" size=\"small\" disabled>\n        <sl-icon name=\"cloud-download\"></sl-icon>\n      </sl-button>\n    </sl-tooltip>   \n\n    <!-- delete -->\n    <sl-button-group>\n      <sl-dropdown placement=\"bottom-end\">\n        <sl-button name=\"deleteBtn\" size=\"small\" slot=\"trigger\" caret>\n          <sl-icon name=\"trash3\"></sl-icon>\n        </sl-button>\n        <sl-menu>\n          <sl-menu-item name=\"deleteCurrentVersion\">Delete current version</sl-menu-item>\n          <sl-menu-item name=\"deleteAllVersions\">Delete all versions</sl-menu-item>\n          <sl-menu-item name=\"deleteAll\">Delete PDF and XML</sl-menu-item>\n        </sl-menu>\n      </sl-dropdown>\n    </sl-button-group>\n\n    <!-- document revision -->\n    <sl-tooltip content=\"Save document revision\">\n      <sl-button name=\"saveRevision\" size=\"small\" disabled>\n        <sl-icon name=\"save\"></sl-icon>\n      </sl-button>\n    </sl-tooltip>    \n    \n  </sl-button-group>\n\n  <!-- TEI -->\n  <sl-button-group label=\"TEI\" name=\"teiActions\">\n\n    <!-- validate -->\n    <sl-tooltip content=\"Validate the document\">\n      <sl-button name=\"validate\" size=\"small\" disabled>\n        <sl-icon name=\"file-earmark-check\"></sl-icon>\n      </sl-button> \n    </sl-tooltip>\n\n  </sl-button-group>\n</span>",
  "new-version-dialog": "<sl-dialog name=\"newVersionDialog\" label=\"Create new version\">\n  <div class=\"dialog-column\">\n    <sl-input name=\"versionName\" label=\"Version Name\" size=\"small\" help-text=\"Provide a short name for the version (required)\"></sl-input>\n    <sl-input name=\"persId\" label=\"Initials\" size=\"small\" help-text=\"Your initials (required)\"></sl-input>\n    <sl-input name=\"persName\" label=\"Editor Name\" size=\"small\" help-text=\"Your name, if this is your first edit on this document\"></sl-input>\n    <sl-input name=\"editionNote\" label=\"Description\" size=\"small\" help-text=\"Description of this version (optional)\"></sl-input>\n  </div>\n  <sl-button slot=\"footer\" name=\"cancel\" variant=\"neutral\">Cancel</sl-button>\n  <sl-button slot=\"footer\" name=\"submit\" variant=\"primary\">Create new version</sl-button>  \n</sl-dialog>",
  "save-revision-dialog": "<sl-dialog name=\"newRevisionChangeDialog\" label=\"Add a change description\">\n  <div class=\"dialog-column\">\n    Document changes to this document in the TEI header\n    <sl-input name=\"persId\" label=\"Initials\" size=\"small\" help-text=\"Your initials (required)\"></sl-input>\n    <sl-input name=\"persName\" label=\"Editor Name\" size=\"small\" help-text=\"Your name, if this is your first edit on this document\"></sl-input>\n    <sl-input name=\"changeDesc\" label=\"Description\" size=\"small\" help-text=\"Description of the change\"></sl-input>\n  </div>\n  <sl-button slot=\"footer\" name=\"cancel\" variant=\"neutral\">Cancel</sl-button>\n  <sl-button slot=\"footer\" name=\"submit\" variant=\"primary\">Add</sl-button>  \n</sl-dialog>",
  "tei-wizard-button": "<sl-tooltip content=\"Enhance TEI, i.e. add missing attributes\">\n<sl-button name=\"teiWizard\" size=\"small\">\n    <sl-icon name=\"magic\"></sl-icon>\n</sl-button>\n</sl-tooltip>",
  "tei-wizard-dialog": "<sl-dialog name=\"teiWizardDialog\" label=\"TEI Wizard\" class=\"dialog-width\" style=\"--width: 50vw;\">\n  <div name=\"enhancementList\"></div>\n  <sl-button slot=\"footer\" name=\"selectAll\">Select All</sl-button>\n  <sl-button slot=\"footer\" name=\"selectNone\">Select None</sl-button>\n  <sl-button slot=\"footer\" name=\"cancel\" variant=\"neutral\">Cancel</sl-button>\n  <sl-button slot=\"footer\" name=\"executeBtn\" variant=\"primary\">Execute</sl-button>\n</sl-dialog>"
}