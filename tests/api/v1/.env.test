# FastAPI Test Environment Configuration
# Used for API integration tests (tests/api/v1/)

# Server
HOST=127.0.0.1
# PORT is auto-selected from available ports in 8010+ range

# Test Paths - runtime data is ephemeral, fixtures are immutable
DATA_ROOT=tests/api/runtime
DB_DIR=tests/api/runtime/db
LOG_DIR=tests/api/runtime/logs

# Features
WEBDAV_ENABLED=true

# Session
SESSION_TIMEOUT=3600

# Logging
LOG_LEVEL=DEBUG
LOG_CATEGORIES=

# Application Mode
FASTAPI_APPLICATION_MODE=testing
