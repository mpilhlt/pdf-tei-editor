# PDF-TEI Editor Production Configuration
# Copy this file to .env for production deployment

# =============================================================================
# Server Configuration
# =============================================================================

# Server host binding
# Default: 127.0.0.1
# For production, consider 0.0.0.0 to accept external connections
# HOST=0.0.0.0

# Server port binding
# Default: 8000
# PORT=8000

# Session timeout in seconds
# Default: 3600 (1 hour)
# SESSION_TIMEOUT=3600

# =============================================================================
# Application Mode
# =============================================================================

# Application mode: production
# FASTAPI_APPLICATION_MODE=production

# =============================================================================
# Access Control Configuration
# =============================================================================

# Document-level access control mode
# Overrides config.json 'access-control.mode' setting when set
# Valid values: role-based, owner-based, granular
# - role-based: Standard role-based permissions (default)
# - owner-based: Only document owner can edit
# - granular: Per-document visibility/editability settings
# Default: (uses config.json setting, which defaults to role-based)
# ACCESS_CONTROL_MODE=role-based

# =============================================================================
# Data Storage Configuration
# =============================================================================

# Root directory containing files/ and db/ subdirectories
# Default: data
# DATA_ROOT=data

# Directory for file uploads
# Default: System temp directory + /pdf-tei-editor-uploads
# UPLOAD_DIR=

# =============================================================================
# Logging Configuration
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
# Recommended for production: WARNING or ERROR
# LOG_LEVEL=WARNING

# Comma-separated logging categories to enable
# Default: (empty - all categories)
# LOG_CATEGORIES=

# =============================================================================
# AI/ML Provider APIs
# =============================================================================

# Google Gemini API key for LLamore extractor
# Required for llamore-gemini extractor to be available
# Get your API key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# GROBID server URL for PDF processing
# Required for grobid extractor to be available
# Example: http://localhost:8070
GROBID_SERVER_URL=

# KISSKI Academic Cloud API key for KISSKI extractor
# Required for kisski-neural-chat extractor to be available
# Get access at: https://kisski.gwdg.de/
KISSKI_API_KEY=

# =============================================================================
# WebDAV Filesystem Configuration
# =============================================================================

# Enable WebDAV filesystem integration
# Set to 'true', '1', or 'yes' to enable
# Default: false
WEBDAV_ENABLED=false

# Base URL for WebDAV server
# Example: https://webdav.example.com
WEBDAV_BASE_URL=

# WebDAV authentication username
WEBDAV_USERNAME=

# WebDAV authentication password
WEBDAV_PASSWORD=

# Root path on WebDAV server
# Default: /pdf-tei-editor
# WEBDAV_REMOTE_ROOT=/pdf-tei-editor

# =============================================================================
# Documentation Configuration
# =============================================================================

# Load documentation from GitHub instead of local files
# Set to 'true', '1', or 'yes' to fetch docs from the GitHub repository
# This allows serving updated documentation without rebuilding the application
# Recommended for production to ensure users see the latest documentation
# Default: false (uses local documentation files)
# DOCS_FROM_GITHUB=true

