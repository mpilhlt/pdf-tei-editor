{
    "name": "pdf-tei-editor",
    "version": "0.7.0",
    "type": "module",
    "scripts": {
        "ci": "uv sync && npm install",
        "prebuild": "npm run generate-client",
        "build": "node bin/build.js",
        "prepare": "husky",
        "test": "npm run test:all",
        "postinstall": "uv run python bin/download-pdfjs && npm run build",
        "version-patch": "npm version patch -m 'Release v%s'",
        "version-minor": "npm version minor -m 'Release v%s'",
        "generate-client": "node bin/generate-api-client.js app/src/modules/api-client-v1.js",
        "generate-client:check": "node bin/check-client-outdated.js",
        "manage": "node bin/manage.js",
        "import": "uv run python bin/import_files.py",
        "start": "uv run python bin/start-dev",
        "start:dev": "uv run python bin/start-dev",
        "start:prod": "uv run python bin/start-prod",
        "start:dev:fastapi": "uv run python bin/start-dev-fastapi",
        "test:all": "node tests/smart-test-runner.js --all",
        "test:changed": "node tests/smart-test-runner.js",
        "test:tap": "node tests/smart-test-runner.js --all --tap",
        "test:unit:js": "node tests/unit-test-runner.js",
        "test:unit:flask": "uv run python tests/unit-test-runner.py tests/unit/flask",
        "test:unit:fastapi": "uv run python tests/unit-test-runner.py tests/unit/fastapi",
        "test:unit": "npm run test:unit:js && npm run test:unit:py",
        "test:api": "node tests/backend-test-runner.js --local --test-dir tests/api/v1",
        "test:api:container": "node tests/backend-test-runner.js --container",
        "test:api:container:cached": "node tests/backend-test-runner.js --container --no-rebuild",
        "test:api:ci": "node tests/backend-test-runner.js --container",
        "test:e2e": "node tests/e2e-runner.js --local",
        "test:e2e:local": "node tests/e2e-runner.js --local",
        "test:e2e:headed": "node tests/e2e-runner.js --local --headed --keep-db",
        "test:e2e:debug": "node tests/e2e-runner.js --local --headed --debugger --keep-db",
        "test:e2e:container": "node tests/e2e-runner.js --container",
        "test:e2e:container:cached": "node tests/e2e-runner.js --container --no-rebuild"
    },
    "dependencies": {
        "@codemirror/autocomplete": "^6.18.6",
        "@codemirror/commands": "^6.8.1",
        "@codemirror/lang-xml": "^6.1.0",
        "@codemirror/lint": "^6.8.5",
        "@codemirror/merge": "^6.10.0",
        "@codemirror/search": "^6.5.10",
        "@shoelace-style/shoelace": "2.20",
        "codemirror": "^6.0.1",
        "commander": "^14.0.1",
        "dotenv": "^17.2.2",
        "entities": "^6.0.1",
        "glob": "^11.0.1",
        "js-plugin": "^1.1.0",
        "markdown-it": "^14.1.0",
        "uuid": "^11.1.0"
    },
    "resolutions": {
        "@codemirror/state": "6.5.2"
    },
    "devDependencies": {
        "@jsenv/importmap-node-module": "^7.1.1",
        "@playwright/test": "^1.55.0",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@types/node": "^24.9.1",
        "@types/uuid": "^10.0.0",
        "comment-parser": "^1.4.1",
        "eventsource-client": "^1.2.0",
        "husky": "^9.1.7",
        "jsdom": "^26.1.0",
        "madge": "^8.0.0",
        "rollup": "^4.40.2"
    }
}
