{
    "name": "pdf-tei-editor",
    "version": "0.15.0",
    "type": "module",
    "scripts": {
        "ci": "uv sync && npm install",
        "prebuild": "npm run generate-client",
        "build": "node bin/build.js",
        "prepare": "husky",
        "test": "npm run test:all",
        "postinstall": "npm run build",
        "release:patch": "node bin/release.js patch",
        "release:minor": "node bin/release.js minor",
        "release:major": "node bin/release.js major",
        "generate-client": "node bin/generate-api-client.js app/src/modules/api-client-v1.js",
        "generate-client:check": "node bin/check-client-outdated.js",
        "manage": "node bin/manage.js",
        "import": "uv run python bin/import_files.py",
        "export": "uv run python bin/export_files.py",
        "start": "uv run python bin/start-prod",
        "start:dev": "uv run python bin/start-dev",
        "start:prod": "uv run python bin/start-prod",
        "dev:reset": "uv run python bin/reset-application.py",
        "dev:clear-caches": "uv run python bin/manage.py clear-caches",
        "test:all": "node tests/smart-test-runner.js --all",
        "test:changed": "node tests/smart-test-runner.js",
        "test:tap": "node tests/smart-test-runner.js --all --tap",
        "test:unit:js": "node tests/unit-test-runner.js",
        "test:unit:fastapi": "uv run python tests/unit-test-runner.py tests/unit/fastapi",
        "test:unit": "npm run test:unit:js && npm run test:unit:fastapi",
        "test:api": "node tests/backend-test-runner.js  --test-dir tests/api/v1",
        "test:e2e": "node tests/e2e-runner.js ",
        "test:e2e:local": "node tests/e2e-runner.js ",
        "test:e2e:headed": "node tests/e2e-runner.js  --headed --keep-db",
        "test:e2e:debug": "node tests/e2e-runner.js  --headed --debugger --keep-db",
        "test:e2e:debug-failure": "node tests/e2e-runner.js  --debug-on-failure --keep-db",
        "test:e2e:container-infra": "E2E_BASE_URL=http://localhost:8000 E2E_SKIP_WEBSERVER=1 npx playwright test tests/e2e/tests/docker-infrastructure.spec.js",
        "test:container": "node bin/test-container.js",
        "container:start": "node bin/container.js start",
        "container:stop": "node bin/container.js stop",
        "container:restart": "node bin/container.js restart",
        "container:logs": "node bin/container.js logs",
        "container:build": "node bin/container.js build",
        "container:build:no-cache": "node bin/container.js build --no-cache",
        "container:push": "node bin/container.js push",
        "container:deploy": "node bin/container.js deploy",
        "deploy": "node bin/deploy.js"
    },
    "dependencies": {
        "@codemirror/autocomplete": "^6.18.6",
        "@codemirror/commands": "^6.8.1",
        "@codemirror/lang-xml": "^6.1.0",
        "@codemirror/lint": "^6.8.5",
        "@codemirror/merge": "^6.10.0",
        "@codemirror/search": "^6.5.10",
        "@shoelace-style/shoelace": "2.20",
        "codemirror": "^6.0.1",
        "commander": "^14.0.2",
        "dotenv": "^17.2.2",
        "entities": "^6.0.1",
        "glob": "^11.0.1",
        "js-plugin": "^1.1.0",
        "markdown-it": "^14.1.0",
        "pdfjs-dist": "5.4.449",
        "uuid": "^11.1.0"
    },
    "resolutions": {
        "@codemirror/state": "6.5.2"
    },
    "devDependencies": {
        "@jsenv/importmap-node-module": "^7.1.1",
        "@playwright/test": "^1.56.1",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@types/node": "^24.9.1",
        "@types/uuid": "^10.0.0",
        "adm-zip": "^0.5.16",
        "comment-parser": "^1.4.1",
        "diff": "^8.0.2",
        "eventsource-client": "^1.2.0",
        "husky": "^9.1.7",
        "jsdom": "^26.1.0",
        "madge": "^8.0.0",
        "rollup": "^4.40.2"
    }
}
